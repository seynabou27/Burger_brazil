<!DOCTYPE html>
<html>
  <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            <link rel="stylesheet" href="/stylesheets/screen.css"> 
            <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" crossorigin="anonymous" referrerpolicy="no-referrer" />   

        {% endblock %}
  </head>

  <body>
    {% block logo %}
        <nav class="navbar  navbar-expand-md custom-navbar navbar-dark">
         <a href="{{path('catalogue')}}">
            <svg xmlns="http://www.w3.org/2000/svg" width="140" height="25" viewBox="0 0 140 25">
              <g id="Groupe_151589" data-name="Groupe 151589" transform="translate(-452 -331)">
                <g id="Groupe_151256" data-name="Groupe 151256" transform="translate(0 1)">
                    <path id="Rectangle_137222" data-name="Rectangle 137222" d="M7,0H18.955A6.045,6.045,0,0,1,25,6.045V7a0,0,0,0,1,0,0H0A0,0,0,0,1,0,7V7A7,7,0,0,1,7,0Z" transform="translate(454 331)" fill="#ff9d19"/>
                    <path id="Rectangle_137223" data-name="Rectangle 137223" d="M0,0H25a0,0,0,0,1,0,0V.955A6.045,6.045,0,0,1,18.955,7H7A7,7,0,0,1,0,0V0A0,0,0,0,1,0,0Z" transform="translate(454 348)" fill="#ff9d19"/>
                    <rect id="Rectangle_137224" data-name="Rectangle 137224" width="29" height="6" rx="3" transform="translate(452 340)" fill="#ff9d19"/>
                  </g>
                  <text id="BurgerFood" transform="translate(490 349)" fill="#fff" font-size="18" font-family="Avenir-Black, Avenir" font-weight="800"><tspan x="0" y="0">BrazilBurger</tspan></text>
                </g>
              </svg>
          </a>
          
          <button class="navbar-toggler navbar-toggler-right custom-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon "></span>
          </button>
        {% endblock %}

          <div class="collapse navbar-collapse  mobile" id="collapsibleNavbar">
            {% if is_granted ('IS_AUTHENTICATED_FULLY') %}  
              {% block navbar %}
                <ul class="navbar-nav m-auto ">
                  {% block gest %}
                  {# {% if not app.user %} #}
                    <li class="nav-item menus">
                      <a class="nav-link menus" href="{{path('tableau_bord')}}"><b>Tableau de bord</b></a>
                    </li>
                    <li class="nav-item menus">
                      <a class="nav-link menus" href="{{path('client_gestionnaire')}}"><b>Commandes</b></a>
                    </li>
                    <li class="nav-item menus">
                      <a class="nav-link menus" href="{{path('produit')}}"><b>Produits</b></a>
                    </li> 
                    <li class="nav-item menus">
                      <a class="nav-link menus" href="#"><b>Archives</b></a>
                    </li>
                    {# {% endif %} #}
                  {% endblock %}
                  {% block client %}
                  {% if app.user %}
                   
                    <li class="nav-item menus">
                      <a class="nav-link menus" href="{{path('catalogue')}}"><b>Catalogue</b></a>
                    </li>  
                    <li class="nav-item menus">
                      <a class="nav-link menus active" href="{{path('mes_commandes')}}"><b>Mes commandes</b></a>
                    </li> 
                    {% endif %}
                  {% endblock %}
                </ul>
                {% block panier %}

                {% if app.user %}

                  <div class="paniers" style="margin-right: -272px;">
                        
                    <a href="{{path('panier')}}"><i class="fa-solid fa-cart-shopping" style="color: #FF9D19 ;"></i></a>

                  </div> 
                   {% elseif not app.user %}
                    <div class="paniers" style="margin-right: -338px;">
                        
                      <a href="{{path('app_login')}}"><i class="fa-solid fa-cart-shopping" style="color: #FF9D19 ;"></i></a>

                    </div> 

                  {% endif %}

                {% endblock %}
              {% endblock  %}
            {% endif %} 
              <form class="form-inline ml-auto">
                {% if is_granted ('IS_AUTHENTICATED_FULLY') %} 
                  <div class="notification">
                    <svg id="icon-social-notifications_24px" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                        <rect id="Boundary" width="24" height="24" fill="none"/>
                        <path id="_Color" data-name=" ↳Color" d="M8,19.5a2,2,0,0,1-2-2h4A2,2,0,0,1,8,19.5Zm8-3H0v-1l2-2v-5A7.1,7.1,0,0,1,3.174,4.44,5.522,5.522,0,0,1,6.5,2.18V1.5a1.5,1.5,0,0,1,3,0v.68a5.529,5.529,0,0,1,3.322,2.264A7.085,7.085,0,0,1,14,8.5v5l2,2v1Z" transform="translate(4 2)" fill="rgba(255,255,255,0.74)"/>
                    </svg> 
                  </div>
                  <div class="identifiant ">
                    <ul class="navbar-nav">
                      <li class="nav-item dropdown ">
                        <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw"></i>
                          
                           <b>{{ app.user.nom}}  {{ app.user.prenom}} </b> 
                          
                        </a>
                        <ul id="drop" class="dropdown-menu dropdown-menu-end mr-5"style="margin-left: 26px; height: 68px;" aria-labelledby="navbarDropdown">
                          
                           
                            <a  href="{{ path('app_logout') }}" class="button deconnexion" style="padding:7px ;"><i class="fas fa-sign-out-alt"></i>Deconnexion</a>
                        </ul>
                      </li>
                    </ul>
                  </div> 
                {% else %}
                  {% block login %}
                    <div class="auth ml-auto">
                    
                         <div id="tableau" class="number"></div> 
                        <a href="{{path('app_login')}}"><i class="fa-solid fa-cart-shopping" style="color: #FF9D19 ;margin-right: 15px;"></i></a>

                      <a  href="{{ path('app_register') }}" class="button inscription">JE M'INSCRIS</a>
                      <a  href="{{ path('app_login') }}" class="button connexion">JE ME CONNECTE</a>
                    </div>
                  {% endblock %}
                {% endif %}
              </form>
          </div>
        </nav> 
      

      {% block body %}{% endblock %}

        <script src="/js/app.js"></script>
        <script src="/js/script.js"></script>
        <script src="/js/panier.js"></script>

        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
      
    </body>
</html>
